//3190. Find Minimum Operations to Make All Elements Divisible by Three
class Solution {
    public int minimumOperations(int[] nums) {
        int n=nums.length;
        int sum=0;
        for(int i=0;i<=n-1;i++){
            if((nums[i]+1)%3==0){
                sum+=1;   
            }else if((nums[i]-1)%3==0){
                sum+=1;

            }

            }
        return sum;
    
    }
}
